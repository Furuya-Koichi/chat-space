.message{"data-message-id": "#{message.id}"}
  .chat-main__message
    .user-name
      = message.user.name
    .date-time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
    .comment
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'image-btn' if message.image.present?

